{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "import/extensions": [
      "error",
      {
        "js": "ignorePackages"
      }
    ],
    "no-console": [2, { "allow": ["warn", "error"] }],
    "import/prefer-default-export": "off",
    "object-curly-newline": "off",
    "operator-linebreak": ["off", "after"],
    "no-nested-ternary": "off",
    "react/prop-types": "off"
  }
}
